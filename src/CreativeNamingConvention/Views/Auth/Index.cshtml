@model CreativeNamingConvention.Models.Domain.AuthCredentials

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("LoginEmail", "Auth", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container creative-containter-top">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="form-horizontal">
                    <div class="panel panel-primary">
                        <div class="panel-height pane panel-heading text-center">
                            <h3><b>@ViewBag.Title</b>: Please Sign-in Using Your Email</h3>
                        </div>
                        <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-sm-offset-2">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.userName)<br />
                                    @Html.TextBoxFor(x => x.userName)

                                    <br />
                                    <br />

                                    @Html.LabelFor(x => x.password)<br />
                                    @Html.TextBoxFor(x => x.password)
                                </div>
                            </div>
                            <div class="form-groupt">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Login" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}